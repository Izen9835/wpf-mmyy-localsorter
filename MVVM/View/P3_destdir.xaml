<UserControl x:Class="FolderMMYYSorter_2.MVVM.View.P3_destdir"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FolderMMYYSorter_2.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    

    <Grid>
        <!-- Top Row: Browse Button + Directory Text -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
            <Button Content="Browse" Height="20" Width="80" Margin="0,0,8,0" Command="{Binding BrowseCommand}"/>
            <TextBox Text="{Binding _FileExplorer.DestDirectory, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                     VerticalAlignment="Center"
                     Height="18"
                     Width="500"
                     GotKeyboardFocus="TextBox_GotKeyboardFocus"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown">
            </TextBox>
        </StackPanel>
    </Grid>
</UserControl>
